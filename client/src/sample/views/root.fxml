<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@rootbar.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.RootManagerController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Файл">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleCars" text="Машины" />
                        <MenuItem mnemonicParsing="false" onAction="#handleClients" text="Клиенты" />
                        <MenuItem mnemonicParsing="false" onAction="#handleLevels" text="Категории" />
                        <MenuItem mnemonicParsing="false" onAction="#handleRents" text="Договора" />
                        <MenuItem mnemonicParsing="false" onAction="#handleClose" text="Закрыть" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Обработка">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Статистика по прибыли" onAction="#handleIncomeStatictics"/>
                        <MenuItem mnemonicParsing="false" text="Статистика по длительности аренд" onAction="#handleLengthStatictics"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Для работника">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleSales" text="Информация о скидках" />
                        <MenuItem mnemonicParsing="false" onAction="#handleClientReq" text="Требования к клиенту" />
                        <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="Об авторе" />
                        <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Выйти из системы" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Поиск">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleSearch" text="Поиск клиента" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
   <bottom>
      <Label fx:id="emplInfo" alignment="TOP_LEFT" text="Label" BorderPane.alignment="TOP_LEFT" />
   </bottom>
</BorderPane>
