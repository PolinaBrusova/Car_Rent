<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.clientView.controllersFX.RootManagerController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Файл">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Машины" onAction="#handleCars"/>
                        <MenuItem mnemonicParsing="false" text="Клиенты" onAction="#handleClients"/>
                        <MenuItem mnemonicParsing="false" text="Договора"/>
                        <MenuItem mnemonicParsing="false" text="Закрыть" onAction="#handleClose"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Обработка">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Поиск клиента" onAction="#handleSearch"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Для работника">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Информация о скидках" onAction="#handleSales"/>
                        <MenuItem mnemonicParsing="false" text="Требования к клиенту" onAction="#handleClientReq"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>